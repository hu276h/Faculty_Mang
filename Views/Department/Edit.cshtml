@model Faculty_M.Models.Department
@{
    var department = Model;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Department</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-M3PWQaY2QFIhwuzE7VW3K1dyA0C1coQemlJD1qDzWIxmg4zFMEu50eU/HiPzGmG4" crossorigin="anonymous">
    <style>
        body {
            background-color: #121212;
            color: #ffffff;
            font-family: Arial, sans-serif;
        }

        .dark-form {
            background-color: #333333;
            padding: 20px;
            border-radius: 10px;
            max-width: 400px;
            margin: auto;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        }

            .dark-form .form-group label {
                color: #ffffff;
            }

            .dark-form .form-control {
                background-color: #444444;
                color: #ffffff;
                border: 1px solid #555555;
            }

                .dark-form .form-control:focus {
                    background-color: #555555;
                    color: #ffffff;
                }

            .dark-form .btn-primary {
                border-color: #1a73e8;
                background: linear-gradient(60deg, green, blue);
                font-weight: bold;
            }


                .dark-form .btn-primary:hover {
                    background-color: #155ab6;
                    border-color: #155ab6;
                }

        .navbar-brand {
            background: linear-gradient(60deg, green, blue);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: bold;
        }

        h5 {
            color: #1a73e8;
            text-align: center;
            padding-top: 20px;
        }
    </style>
</head>
<body>
    <h5><span class="navbar-brand">Editing Department</span></h5>
    <div class="dark-form">
        <form asp-controller="department" asp-action="edit" method="post">
            <input type="hidden" asp-for="DeptId" />
            <div class="form-group">
                <label for="DeptName">Department Name:</label>
                <input type="text" class="form-control" value="@department.DeptName" asp-validation-for="DeptName" name="DeptName" id="DeptName" />
                <span asp-validation-for="DeptName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="DeptDesc">Department Description:</label>
                <input type="text" class="form-control" asp-validation-for="DeptDesc" value="@department.DeptDesc" name="DeptDesc" id="DeptDesc" />
                <span asp-validation-for="DeptDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="DeptLocation">Department Location:</label>
                <input type="text" class="form-control" value="@department.DeptLocation" name="DeptLocation" id="DeptLocation" />
                <span asp-validation-for="DeptLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="DeptManager">Department Manager:</label>
                <input type="text" class="form-control" asp-validation-for="DeptManager" value="@department.DeptManager" name="DeptManager" id="DeptManager" />
                <span asp-validation-for="DeptManager" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="ManagerHireDate">Date:</label>
                <input type="date" class="form-control" value="@(department.ManagerHireDate.HasValue ? department.ManagerHireDate.Value.ToString("yyyy-MM-dd") : string.Empty)" asp-validation-for="ManagerHireDate" name="ManagerHireDate" id="ManagerHireDate" />
                <span asp-validation-for="ManagerHireDate" class="text-danger"></span>
            </div>


            <div class="d-flex justify-content-center" style="padding-top: 40px;">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgvVh5lB7Cji8gk54A1hohzTYfJr8Hd50Tvf6Ezri0fxYSl0pGr" crossorigin="anonymous"></script>
</body>
</html>
