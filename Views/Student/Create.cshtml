@model Faculty_M.Models.Student

<h5><span class="navbar-brand">Create New Student</span></h5>
<div class="dark-form">
    <form asp-controller="student" asp-action="Create" method="post">
        <div class="form-group">
            <label for="StId">Student Id:</label>
            <input type="text" asp-for="StId" class="form-control" />
            <span asp-validation-for="StId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="StName">Name:</label>
            <input type="text" asp-for="StName" class="form-control" />
            <span asp-validation-for="StName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="StAge">Age:</label>
            <input type="number" asp-for="StAge" class="form-control" />
            <span asp-validation-for="StAge" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="GPA">GPA:</label>
            <input type="number" asp-for="GPA" class="form-control" step="0.01" />
            <span asp-validation-for="GPA" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Email">Email Address:</label>
            <input type="email" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="StAddress">Address:</label>
            <input type="text" asp-for="StAddress" class="form-control" />
            <span asp-validation-for="StAddress" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="PhoneNumber">Phone Number:</label>
            <input type="number" asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="DeptId">Department:</label>
            <select asp-for="DeptId" asp-items="ViewBag.DeptId" class="form-control">
                <option value="">-- Select Department --</option>
            </select>
            <span asp-validation-for="DeptId" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-center" style="padding-top: 40px;">
            <input type="submit" class="btn btn-primary" value="Create" />
        </div>
    </form>
</div>

<style>
    body {
        background-color: #121212;
        color: #ffffff;
        font-family: Arial, sans-serif;
    }

    .dark-form {
        background-color: #333333;
        padding: 20px;
        border-radius: 10px;
        max-width: 400px;
        margin: auto;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    }

        .dark-form .form-group label {
            color: #ffffff;
        }

        .dark-form .form-control {
            background-color: #444444;
            color: #ffffff;
            border: 1px solid #555555;
        }

            .dark-form .form-control:focus {
                background-color: #555555;
                color: #ffffff;
            }

        .dark-form .btn-primary {
            border-color: #1a73e8;
            background: linear-gradient(60deg, green, blue);
            font-weight: bold;
        }


            .dark-form .btn-primary:hover {
                background-color: #155ab6;
                border-color: #155ab6;
            }

    .navbar-brand {
        background: linear-gradient(60deg, green, blue);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: bold;
    }

    h5 {
        color: #1a73e8;
        text-align: center;
        padding-top: 20px;
    }
</style>

